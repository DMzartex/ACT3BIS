<Window x:Class="ACT_3BIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACT_3BIS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="610" Background="#B93D3B" Foreground="#DCC7A9" FontSize="14px">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <GroupBox Header="TYPE DE LOGEMENT" Width="150px" Height="100px" Margin="0,0,10px,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <RadioButton Margin="0,0,0,10px" Checked="checkedChalet">
                    <TextBlock Foreground="#DCC7A9">CHALET</TextBlock>
                </RadioButton>
                <RadioButton Checked="checkedTente">
                    <TextBlock Foreground="#DCC7A9">TENTE</TextBlock>
                </RadioButton>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="CARACTERISTIQUES DU SEJOUR" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Width="265px" Height="155px" Margin="0,-60,0,0">
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5,0,0,0">Nbre de personne (entre 1 et 6) :</TextBlock>
                    <TextBox x:Name="textBoxNbr" Width="20px" Height="20px" Margin="15,0,0,0" PreviewTextInput="PreviewNbrPersonne"></TextBox> 
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Margin="5,0,0,0">Date d'arrivée :</TextBlock>
                    <TextBox Width="100px" Height="20px" Margin="38,0,0,0"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Margin="5,0,0,0">Date de sortie :</TextBlock>
                    <TextBox Width="100px" Height="20px" Margin="38,0,0,0"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Margin="5,0,0,0">DUREE SORTIE</Button>
                    <TextBlock Margin="38,0,0,0">durée en semaines</TextBlock>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <CheckBox Grid.Row="1" Foreground="#DCC7A9" Margin="20,20,0,0" FontSize="20px" Checked="checkedReservation">Reservation</CheckBox>

        <GroupBox Header="RESULTATS" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Height="120px" Width="390px">
            <StackPanel Orientation="Vertical">
                <TextBlock FontSize="20px" Margin="0,20,0,0">Prix à Payer :</TextBlock>
                <TextBlock FontSize="20px" Margin="0,20,0,0">Nombre de semaines :</TextBlock>                
            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="2">
            <Button Width="130px" Height="30px" Margin="0,30,0,0">CALCULER</Button>
            <Button Width="130px" Height="30px" Margin="0,30,0,0">INIT</Button>
        </StackPanel>
    </Grid>
</Window>
